@using CaptchaMvc.HtmlHelpers
@using CaptchaMvc;
@model Mail.Send.Models.EmailModel


@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/lib/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

    <title>Index</title>

    <style>

        .contact-form {
            margin-top: 100px;
            margin-bottom: 100px;
            padding: 40px;
            box-shadow: 0px 0px 10px 3px grey;
        }
        .spn{
          font-weight:bold;
        }
    </style>
</head>

<body class="bg-info">

    @using (Html.BeginForm("Index", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
   <div class="container contact-form bg-light text-dark w-50">
       <form action="">
           <div class="form-group">
               <label class="spn">To:</label>
               @Html.TextBoxFor(model => model.To, new { @class = "form-control" })
           </div>

           <div class="form-group">
               <label class="spn">Subject:</label>
               @Html.TextBoxFor(model => model.Subject, new { @class = "form-control" })
           </div>

           <div class="form-group">
               <label class="spn">Message:</label>
               @Html.TextAreaFor(model => model.Body, new { @class = "form-control" })
           </div>

           <div>
               <label class="spn">File Attachment:</label>
               @Html.TextBoxFor(model => model.Attachment, new { type = "file" })

           </div>

           <div class="form-group">
               <label class="spn">Email:</label>
               @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
           </div>

           <div class="form-group">
               <label class="spn">Password:</label>
               @Html.PasswordFor(model => model.Password, new { @class = "form-control" })
           </div>
           <div class="form-group mt-2">
               <button class="btn btn-success btn-lg">Send</button>
           </div>
           <div>
               @Html.MathCaptcha()
           </div>
       </form>    
    </div>

      /*   <span style="color:green">@ViewBag.Message</span>
    */       
    }
</body>
</html>